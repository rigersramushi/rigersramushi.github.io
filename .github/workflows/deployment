name: Pages

on:
  push:
    branches: [main]

permissions:
  contents: read
  pages: write # required
  id-token: write # required

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    # ðŸ‘‡ declare the environment GitHub Pages uses
    environment:
      name: github-pages
      url: ${{ steps.deploy.outputs.page_url }}

    steps:
      - uses: actions/checkout@v4

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: 20

      - name: Install dependencies
        run: npm ci

      - name: Build Angular PWA
        run: |
          npx ng build --configuration production --base-href /rigersramushi.github.io/

      - name: Configure GitHub Pages
        uses: actions/configure-pages@v5

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: dist/photodrop-ng/browser # <- your Angular output

      - name: Deploy to GitHub Pages
        id: deploy # <-- give it an id so we can read page_url
        uses: actions/deploy-pages@v4
